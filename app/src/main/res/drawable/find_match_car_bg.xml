<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 连框颜色值 -->
        <item android:width="@dimen/dp_280" android:gravity="center">
            <shape>
                <solid android:color="#FAFAFA" />
                <corners android:bottomLeftRadius="@dimen/dp_10" android:bottomRightRadius="@dimen/dp_10" ></corners>
            </shape>
        </item>
        <!-- 主体背景颜色值 -->
        <item android:bottom="@dimen/dp_1" >
            <!--边框里面背景颜色 白色-->
            <shape>
                <solid android:color="@color/white" />
                <corners android:bottomLeftRadius="@dimen/dp_10" android:bottomRightRadius="@dimen/dp_10">
                </corners>
            </shape>
        </item>
</layer-list>