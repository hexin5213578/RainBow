<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_item"
        android:layout_height="wrap_content">
        <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
            android:layout_width="@dimen/dp_50"
            android:src="@mipmap/headimg"
            roundiv:radius="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_13"
            android:id="@+id/iv_headimg"
            android:layout_height="@dimen/dp_50">
        </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="偏爱"
            android:textColor="@color/black"
            android:id="@+id/tv_name"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2021年2月10号加入"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_time"
            android:textColor="#8e8e93"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="已同意"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:id="@+id/tv_bt"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:background="@drawable/tenradious_e6_bg"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/iv_headimg"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#dcdcdc"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_height="@dimen/dp_1">
        </View>
    </RelativeLayout>
</RelativeLayout>