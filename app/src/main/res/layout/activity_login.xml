<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#70614B"
    android:layout_height="match_parent"
    tools:context=".login.activity.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:text="账号登录"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="遇见问题"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:id="@+id/tv_mt_pro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/phone"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_210"
            android:hint="请输入您的手机号"
            android:textColor="@color/white"
            android:maxLength="11"
            android:id="@+id/et_phone"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/l2"
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:id="@+id/suo1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/lock"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_190"
            android:hint="输入密码"
            android:id="@+id/et_pwd1"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/suo1"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/eyeclose"
            android:id="@+id/iv_see_pwd1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">
        </ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="立即注册"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/tv_to_regist"
        android:layout_below="@id/l2"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="忘记密码"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/tv_reme_pwd"
        android:layout_marginRight="@dimen/dp_47"
        android:layout_below="@id/l2"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_height="wrap_content">
    </TextView>
    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_below="@id/tv_to_regist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:text="登录"
        android:id="@+id/bt_login"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/regist_ll_bg"
        android:layout_height="@dimen/dp_40">
    </Button>
    <RelativeLayout
        android:id="@+id/rl_qq_login"
        android:layout_width="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wechatandqq_login_bg"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_91"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@mipmap/qq"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_17">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wechat_login"
        android:layout_width="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wechatandqq_login_bg"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_91"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@mipmap/wechat"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_17">
        </ImageView>
    </RelativeLayout>
</RelativeLayout>