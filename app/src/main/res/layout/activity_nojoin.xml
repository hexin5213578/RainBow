<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_top"
                android:layout_height="@dimen/dp_215">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/iv_bg"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent">
                </ImageView>
                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/back_white">
                    </ImageView>
                </LinearLayout>
                <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
                    android:layout_below="@id/ll_back"
                    android:layout_width="@dimen/dp_69"
                    roundiv:radius="@dimen/dp_5"
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_img"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/dp_61">
                </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="群聊名字"
                    android:textColor="@color/white"
                    android:layout_below="@id/iv_img"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_group_name"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_below="@id/tv_group_name"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ID:123456"
                        android:id="@+id/tv_group_id"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dp_11"
                            android:src="@mipmap/group_count"
                            android:layout_gravity="bottom"
                            android:layout_height="@dimen/dp_12">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="100"
                            android:id="@+id/tv_group_people_count"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/rl_top"
                android:layout_height="match_parent">
                <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
                    android:layout_width="@dimen/dp_43"
                    roundiv:radius="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:id="@+id/iv_lordimg"
                    android:layout_height="@dimen/dp_43">
                </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_lordname"
                    android:layout_toRightOf="@id/iv_lordimg"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="群主"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/color_8867E7"
                    android:paddingLeft="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_7"
                    android:background="@drawable/lord_tv_bg"
                    android:gravity="center"
                    android:layout_below="@id/tv_lordname"
                    android:layout_toRightOf="@id/iv_lordimg"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/f2f2f2"
                    android:id="@+id/v1"
                    android:layout_below="@id/iv_lordimg"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="@dimen/dp_2">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="群聊成员"
                    android:id="@+id/tv1"
                    android:layout_below="@id/v1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_below="@id/tv1"
                    android:id="@+id/rc_member"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_below="@id/rc_member"
                    android:id="@+id/rl_seemore"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="查看更多群成员"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_999999"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/back_to"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/dp_10">
                    </ImageView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#F7F7F7"
                    android:id="@+id/v2"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_below="@id/rl_seemore"
                    android:layout_height="@dimen/dp_2">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="群简介"
                    android:id="@+id/tv2"
                    android:layout_below="@id/v2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/tv_jianjie"
                    android:layout_below="@id/tv2"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content">
                </TextView>

                <Button
                    android:layout_width="@dimen/dp_160"
                    android:text="加入群聊"
                    android:layout_below="@id/tv_jianjie"
                    android:id="@+id/bt_join"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_50"
                    android:gravity="center"
                    android:background="@drawable/group_bt_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/dp_34">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>