<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_item"
        android:background="@drawable/white_five_radious_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_67">
        <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
            android:layout_width="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/iv_img"
            android:layout_marginTop="@dimen/dp_10"
            roundiv:radius="@dimen/dp_5"
            android:src="@mipmap/headimg"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="@dimen/dp_48">
        </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:text="公会昵称"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:id="@+id/tv_union_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_centerVertical="true"
            android:text="公会签名"
            android:id="@+id/tv_union_qianming"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ID:"
                android:textStyle="italic"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="123131"
                android:id="@+id/tv_union_id"
                android:textSize="@dimen/sp_10"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@drawable/ic_launcher"
                android:layout_height="@dimen/dp_11">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="30"
                android:id="@+id/tv_union_count"
                android:layout_marginLeft="@dimen/dp_3"
                android:textSize="@dimen/sp_8"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>