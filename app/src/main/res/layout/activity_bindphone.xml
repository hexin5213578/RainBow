<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:id="@+id/rl_top"
        android:layout_height="@dimen/dp_42">
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:id="@+id/iv_back"
            android:layout_height="@dimen/dp_42">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_15">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="修改手机号"
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_333333"
            android:layout_height="@dimen/dp_22">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/rl_bind"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l1"
            android:layout_height="@dimen/dp_48">
            <EditText
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/et_phone"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/l1"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_f7f7f7"
            android:id="@+id/v1"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:layout_below="@id/v1"
            android:layout_height="@dimen/dp_48">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/et_code1"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_getcode1"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_8867E7"
                android:background="@drawable/yichu_bg"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/l2"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_f7f7f7"
            android:id="@+id/v2"
            android:layout_height="@dimen/dp_1">
        </View>
        <Button
            android:layout_width="@dimen/dp_160"
            android:text="绑定"
            android:layout_below="@id/v2"
            android:id="@+id/bt_bind1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bindphone_bt_bg"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_height="@dimen/dp_34">
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/rl_change"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l3"
            android:layout_height="@dimen/dp_48">
            <EditText
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:id="@+id/et_newphone"
                android:hint="请输入新的手机号"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/l3"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_f7f7f7"
            android:id="@+id/v3"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l4"
            android:orientation="horizontal"
            android:layout_below="@id/v3"
            android:layout_height="@dimen/dp_48">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:id="@+id/et_code2"
                android:hint="请输入验证码"
                android:textColorHint="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_8867E7"
                android:id="@+id/tv_getcode2"
                android:background="@drawable/yichu_bg"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/l4"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_f7f7f7"
            android:id="@+id/v4"
            android:layout_height="@dimen/dp_1">
        </View>
        <Button
            android:layout_width="@dimen/dp_160"
            android:text="确认修改"
            android:layout_below="@id/v4"
            android:id="@+id/bt_bind2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bindphone_bt_bg"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_height="@dimen/dp_34">
        </Button>
    </RelativeLayout>
</RelativeLayout>