<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/rl_top"
        android:layout_height="@dimen/dp_22">
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:id="@+id/iv_back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="match_parent">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="充值金币"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="充值记录"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_Recharge_record"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/ll_balance"
        android:layout_below="@id/rl_top"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="金币余额:"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_666666"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="600"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_20"
            android:id="@+id/tv_balance"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_balance"
        android:id="@+id/ll_top"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_height="@dimen/dp_86">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l1"
            android:background="@drawable/select_money_xuanzhong"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="60"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥6.00"
                android:checked="true"
                android:id="@+id/rb1"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:id="@+id/l2"
            android:background="@drawable/select_money_weixuanzhong"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="120"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥12.00"
                android:id="@+id/rb2"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l3"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/select_money_weixuanzhong"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="450"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥45.00"
                android:id="@+id/rb3"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_top"
        android:id="@+id/ll_bottom"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="@dimen/dp_86">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l4"
            android:background="@drawable/select_money_weixuanzhong"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="680"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥68.00"
                android:id="@+id/rb4"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:id="@+id/l5"
            android:background="@drawable/select_money_weixuanzhong"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1180"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥118.00"
                android:id="@+id/rb5"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/select_money_weixuanzhong"
            android:orientation="vertical"
            android:id="@+id/l6"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dp_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/glod"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="6480"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="¥648.00"
                android:id="@+id/rb6"
                android:background="@drawable/selector_money_bg"
                android:gravity="center"
                android:layout_height="match_parent">
            </RadioButton>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_bottom"
        android:gravity="center"
        android:id="@+id/ll_select"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_height="wrap_content">
        <View
            android:layout_width="@dimen/dp_73"
            android:layout_gravity="center"
            android:background="@color/f2f2f2"
            android:layout_height="@dimen/dp_1">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:text="请选择充值方式"
            android:layout_marginLeft="@dimen/dp_9"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_999999"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="@dimen/dp_73"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_9"
            android:background="@color/f2f2f2"
            android:layout_height="@dimen/dp_1">
        </View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_select"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/ll_select_payWay"
        android:orientation="vertical"
        android:background="@drawable/select_pay_way"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_height="@dimen/dp_83">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rl_wechat_pay"
            android:layout_height="@dimen/dp_41">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_33"
                android:src="@mipmap/wechat_pay"
                android:id="@+id/iv"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_20">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/iv"
                android:text="微信支付"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <RadioButton
                android:id="@+id/check_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:checked="true"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/check_button_bg"
                android:textColor="#999999">
            </RadioButton>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/e6e6e6"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rl_ali_pay"
            android:layout_height="@dimen/dp_41">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_33"
                android:src="@mipmap/zhifubao"
                android:id="@+id/iv1"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_20">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/iv1"
                android:text="支付宝支付"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <RadioButton
                android:id="@+id/check_Alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/check_button_bg"
                android:textColor="#999999">
            </RadioButton>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_select_payWay"
        android:text="确认支付"
        android:id="@+id/bt_confirm_pay"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:background="@drawable/background_gradient"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_height="@dimen/dp_40">
    </Button>
</RelativeLayout>