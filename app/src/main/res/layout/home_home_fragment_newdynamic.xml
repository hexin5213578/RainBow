<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/no_data"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_187"
            android:src="@mipmap/noperson"
            android:id="@+id/iv"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_169">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="暂无数据"
            android:layout_below="@id/iv"
            android:textSize="@dimen/sp_18"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_nonet"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_212"
            android:src="@mipmap/nonet"
            android:id="@+id/iv1"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_158">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="网络出了点小问题，请刷新重试"
            android:layout_below="@id/iv1"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="@dimen/dp_100"
            android:id="@+id/bt_reload"
            android:layout_centerHorizontal="true"
            android:text="重新加载"
            android:background="@drawable/reload_bg"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_below="@id/iv1"
            android:layout_marginTop="@dimen/dp_81"
            android:layout_height="@dimen/dp_32">
        </Button>
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:id="@+id/sv"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rc_newDynamic"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>