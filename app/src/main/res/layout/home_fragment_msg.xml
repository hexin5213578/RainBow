<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@drawable/gradient_color"
        />
    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:background="@drawable/background_gradient_noradius"
        android:layout_height="@dimen/dp_53">
        <TextView
            android:layout_width="wrap_content"
            android:text="消息"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_19"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:src="@mipmap/filter"
            android:id="@+id/iv_my_buddy"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_17">
        </ImageView>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/rl1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:id="@+id/iv_notice"
                        android:src="@mipmap/tv"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_height="@dimen/dp_40">
                    </ImageView>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:src="@mipmap/tv"
                        android:id="@+id/iv_buddy"
                        android:layout_toRightOf="@id/iv_notice"
                        android:layout_height="@dimen/dp_40">
                    </ImageView>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:src="@mipmap/tv"
                        android:id="@+id/iv_comment"
                        android:layout_toRightOf="@id/iv_buddy"
                        android:layout_height="@dimen/dp_40">
                    </ImageView>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:src="@mipmap/tv"
                        android:id="@+id/iv_like"
                        android:layout_toRightOf="@id/iv_comment"
                        android:layout_height="@dimen/dp_40">
                    </ImageView>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_below="@id/rl2"
                    android:id="@+id/rc_msg_recording"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>