<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#70614B"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:src="@mipmap/back"
        android:id="@+id/back"
        android:layout_marginLeft="@dimen/dp_16"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="设置密码"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="遇见问题"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:id="@+id/tv_mt_pro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_height="wrap_content">
    </TextView>


    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:id="@+id/suo1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/lock"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_190"
            android:hint="输入密码"
            android:id="@+id/et_pwd1"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/suo1"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/eyeclose"
            android:id="@+id/iv_see_pwd1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2"
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:id="@+id/suo2"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/lock"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_190"
            android:hint="确认密码"
            android:id="@+id/et_pwd2"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/suo2"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/eyeclose"
            android:id="@+id/iv_see_pwd2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">
        </ImageView>
    </RelativeLayout>
    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_below="@id/l2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:text="登录"
        android:id="@+id/bt_login"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/regist_ll_bg"
        android:layout_height="@dimen/dp_40">
    </Button>
</RelativeLayout>