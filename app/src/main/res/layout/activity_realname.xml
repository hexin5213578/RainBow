<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white" />
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_42">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="实名认证"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/rl_confirm"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l1"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="姓名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_47"
                android:background="@null"
                android:id="@+id/et_name"
                android:hint="请输入真实姓名"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:id="@+id/v1"
            android:layout_below="@id/l1"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/v1"
            android:id="@+id/l2"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="身份证号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@null"
                android:id="@+id/et_idcard"
                android:maxLength="18"
                android:hint="请输入18位身份证号码"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:id="@+id/v2"
            android:layout_below="@id/l2"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v2"
            android:id="@+id/l3"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_height="@dimen/dp_120">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/selectidcard_bg"
                android:layout_height="match_parent"
                android:id="@+id/rl_zhengmian"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:src="@mipmap/camera"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_height="@dimen/dp_30">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="正面照片"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#8867E7"
                    android:layout_marginTop="@dimen/dp_77"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_zhengm"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/l3"
            android:id="@+id/l6"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_height="@dimen/dp_120">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selectidcard_bg"
                android:id="@+id/rl_fanmian"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:src="@mipmap/camera"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_height="@dimen/dp_30">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="反面照片"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#8867E7"
                    android:layout_marginTop="@dimen/dp_67"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_fanm"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>

        <Button
            android:layout_width="@dimen/dp_160"
            android:text="提交"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:id="@+id/bt_confirm"
            android:layout_below="@id/l6"
            android:background="@drawable/idcardbt_bg"
            android:layout_height="@dimen/dp_34">
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/rl_isreal"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_180"
            android:src="@mipmap/isreal"
            android:id="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_104">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/iv"
            android:text="你已通过实名认证"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_21"
            android:textColor="#8867E7"
            android:id="@+id/tv_status"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/tv_status"
            android:id="@+id/l4"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="真实姓名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_name"
                android:hint="张某某"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/l4"
            android:id="@+id/v3"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_f7f7f7"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v3"
            android:id="@+id/l5"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="身份证号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_idcard"
                android:text="123456789123456789"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>