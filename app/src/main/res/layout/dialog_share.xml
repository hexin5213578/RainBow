<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_245"
        android:layout_centerInParent="true"
        android:background="@drawable/white_ten_radious_bg"
        android:layout_height="@dimen/dp_210">
        <TextView
            android:layout_width="wrap_content"
            android:text="分享到"
            android:id="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_below="@id/tv1"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/l1"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ll_share_friend"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:src="@mipmap/haoyou"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="好友"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_share_qq"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:src="@mipmap/shareqq"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="QQ"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_share_space"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_gravity="right"
                    android:src="@mipmap/qqzone"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="QQ空间"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/l1"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/l2"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ll_share_Wechat"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:src="@mipmap/sharewechat"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="微信"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_share_wechatmoments"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:src="@mipmap/pengyouquan"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="朋友圈"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_70">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_gravity="right"
                    android:src="@mipmap/headimg"
                    android:layout_height="@dimen/dp_45">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="QQ空间"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>