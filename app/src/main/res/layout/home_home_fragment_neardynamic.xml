<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_nodata"></include>
    <include layout="@layout/layout_nonet"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_no_location"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_212"
            android:src="@mipmap/nonet"
            android:id="@+id/iv1"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_158">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="检测到没有位置权限，请开启后再试"
            android:layout_below="@id/iv1"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="@dimen/dp_100"
            android:id="@+id/bt_open"
            android:layout_centerHorizontal="true"
            android:text="开启权限"
            android:background="@drawable/reload_bg"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_below="@id/iv1"
            android:layout_marginTop="@dimen/dp_81"
            android:layout_height="@dimen/dp_32">
        </Button>
    </RelativeLayout>
    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:id="@+id/sv"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rc_newDynamic"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>