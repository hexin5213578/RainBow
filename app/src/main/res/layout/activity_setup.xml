<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_42">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_safe"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="账户与安全"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v1"
            android:layout_below="@id/rl_safe"
            android:layout_height="@dimen/dp_1">
        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_shiming"
            android:layout_below="@id/v1"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="实名认证"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="未认证"
                android:id="@+id/tv_IsRealname"
                android:layout_centerVertical="true"
                android:textColor="@color/color_666666"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/iv1"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:id="@+id/iv1"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v2"
            android:layout_below="@id/rl_shiming"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_hei"
            android:layout_below="@id/v2"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="黑名单"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_fankui"
            android:layout_below="@id/rl_hei"
            android:visibility="gone"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="意见反馈"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v4"
            android:layout_below="@id/rl_fankui"
            android:layout_height="@dimen/dp_1">
        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_guanyu"
            android:layout_below="@id/v4"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="关于我们"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v5"
            android:layout_below="@id/rl_guanyu"
            android:layout_height="@dimen/dp_1">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_clean"
            android:layout_below="@id/v5"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="清理缓存"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/iv2"
                android:text="120MB"
                android:id="@+id/tv_Memory"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:id="@+id/iv2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v6"
            android:layout_below="@id/rl_clean"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_kefu"
            android:layout_below="@id/v6"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="联系客服"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:id="@+id/iv4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v7"
            android:layout_below="@id/rl_kefu"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_update"
            android:layout_below="@id/v7"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="当前版本"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/iv3"
                android:text="0.1.1"
                android:id="@+id/tv_edition"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back_to"
                android:scaleType="centerCrop"
                android:id="@+id/iv3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v8"
            android:layout_below="@id/rl_update"
            android:layout_height="@dimen/dp_2">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v8"
            android:id="@+id/rl_loginout"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="match_parent"
                android:text="退出登录"
                android:gravity="center"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/color_333333"
                android:layout_height="match_parent">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/v9"
            android:layout_below="@id/rl_loginout"
            android:layout_height="@dimen/dp_2">
        </View>
    </RelativeLayout>
</RelativeLayout>