<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_40"
        android:src="@mipmap/headimg"
        android:id="@+id/iv_headimg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="@dimen/dp_40">
    </ImageView>
    <TextView
        android:layout_width="@dimen/dp_15"
        android:text="BI"
        android:id="@+id/tv_age"
        android:textSize="@dimen/sp_11"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_marginLeft="@dimen/dp_39"
        android:background="@drawable/newdynamic_age"
        android:layout_height="@dimen/dp_15">
    </TextView>
    <TextView
        android:layout_width="@dimen/dp_29"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:text="昵称"
        android:id="@+id/tv_username"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@id/iv_headimg"
        android:layout_height="@dimen/dp_14">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="半小时前发布"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_headimg"
        android:textSize="@dimen/sp_8"
        android:textColor="#9A9A9A"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@mipmap/fire"
        android:layout_toRightOf="@id/tv_username"
        android:layout_height="@dimen/dp_15">
    </ImageView>
    <TextView
        android:layout_width="@dimen/dp_45"
        android:text="关注"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_guanzhu"
        android:textColor="#3C025A"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/newdynamic_weiguanzhu"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:layout_height="@dimen/dp_18">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_dynamic_text"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:text="我们确实活得艰难，一要承受种种外部的压力， 更要面 对自己内心的困惑。在苦苦挣扎中，如果有人向你投以 理解的目光，你会感到- -种生命的暖意，或许仅有短暂 的-瞥,就足以使我感奋不已。"
        android:layout_below="@id/iv_headimg"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content">
    </TextView>
    <com.YiDian.RainBow.custom.videoplayer.SampleCoverVideo
        android:layout_width="match_parent"
        android:id="@+id/video_player"
        android:layout_below="@id/tv_dynamic_text"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_165">
    </com.YiDian.RainBow.custom.videoplayer.SampleCoverVideo>
    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_below="@id/video_player"
        android:id="@+id/ll_huati"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/newdynamic_ll_bg"
        android:layout_height="@dimen/dp_19">
        <TextView
            android:layout_width="wrap_content"
            android:text="#交友聊天"
            android:textColor="#21B6FD"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#3C025A"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="HOT!"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/video_player"
        android:layout_toRightOf="@id/ll_huati"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_dianzan"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/dianzan"
                android:id="@+id/iv_dianzan"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_toRightOf="@id/iv_dianzan"
                android:layout_width="wrap_content"
                android:text="30"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="@dimen/sp_9"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_dianzan_count"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_pinglun"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/dianzan"
                android:id="@+id/iv_pinglun"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="30"
                android:textSize="@dimen/sp_9"
                android:id="@+id/tv_pinglun_count"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_pinglun"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_zhuanfa"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/dianzan"
                android:id="@+id/iv_zhuanfa"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:text="转发"
                android:id="@+id/zhuangfa"
                android:textSize="@dimen/sp_9"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_zhuanfa"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="6.0km"
        android:textSize="@dimen/sp_11"
        android:id="@+id/tv_distance"
        android:layout_below="@id/ll_huati"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#9A9A9A"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="900"
        android:textSize="@dimen/sp_11"
        android:id="@+id/tv_liulan_count"
        android:layout_below="@id/ll_huati"
        android:layout_toRightOf="@id/tv_distance"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#9A9A9A"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="浏览"
        android:textSize="@dimen/sp_11"
        android:layout_below="@id/ll_huati"
        android:layout_toRightOf="@id/tv_liulan_count"
        android:textColor="#9A9A9A"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@id/tv_liulan_count"
        android:layout_height="@dimen/dp_3">
    </View>
</RelativeLayout>