<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:id="@+id/rl_top"
        android:layout_height="@dimen/dp_42">
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:id="@+id/iv_back"
            android:layout_height="@dimen/dp_42">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_15">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="编辑资料"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_333333"
            android:layout_height="@dimen/dp_22">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/rl_change_headimg"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:text="头像"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="真实的头像图片能增加匹配速度"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#B1B1B1"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:layout_toLeftOf="@id/iv"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="match_parent">
        </ImageView>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F2F2F2"
        android:id="@+id/rl"
        android:layout_below="@id/rl_change_headimg"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="@dimen/dp_25">
        <TextView
            android:layout_width="wrap_content"
            android:text="基础资料"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl"
        android:id="@+id/rl_name"
        android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_width="wrap_content"
            android:text="昵称"

            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="偏爱"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_name"
            android:layout_toLeftOf="@id/iv1"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:id="@+id/v1"
        android:layout_below="@id/rl_name"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/v1"
        android:id="@+id/rl_age"
        android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_width="wrap_content"
            android:text="出生日期"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="未设置"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_age"
            android:layout_toLeftOf="@id/iv2"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:id="@+id/v2"
        android:layout_below="@id/rl_age"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/v2"
        android:id="@+id/rl_qianming"
        android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_width="wrap_content"
            android:text="个性签名"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="未设置"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_qianming"
            android:layout_toLeftOf="@id/iv3"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:id="@+id/v3"
        android:layout_below="@id/rl_qianming"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/v3"
        android:id="@+id/rl_myrole"
        android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_width="wrap_content"
            android:text="我的角色"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="未设置"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_myrole"
            android:layout_toLeftOf="@id/iv4"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:id="@+id/v4"
        android:layout_below="@id/rl_myrole"
        android:layout_height="@dimen/dp_1">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/v4"
        android:id="@+id/rl_ganqingstate"
        android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_width="wrap_content"
            android:text="感情状态"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="未设置"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_mystate"
            android:layout_toLeftOf="@id/iv6"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/back_to" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:id="@+id/v6"
        android:layout_below="@id/rl_ganqingstate"
        android:layout_height="@dimen/dp_1">
    </View>
</RelativeLayout>