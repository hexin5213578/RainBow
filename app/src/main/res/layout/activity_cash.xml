<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"/>
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"

        >
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/l_return"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_46">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/back_white" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_17"
            android:textColor="#333333"
            />

    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E6E6E6"
        />
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textSize="@dimen/dp_15"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
<!--        android:text="1000"-->
        <EditText
            android:id="@+id/tv_input_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入提现金币"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:background="@null"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/t1"
            android:layout_marginLeft="@dimen/dp_20"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r2"
        android:background="#F6F6F6"
        >
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="#F6F6F6"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择提现方式"
                android:textSize="@dimen/sp_14"
                android:textColor="#BEBEBE"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:background="@color/white"
            android:layout_below="@+id/l1"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >
            <RadioButton
                android:id="@+id/check_Alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_16"
                android:checked="true"
                android:button="@drawable/report_check_button_bg"
                android:textColor="#999999"
                >
            </RadioButton>
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ali_pay"
                android:layout_marginLeft="@dimen/dp_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝提现"
                android:textColor="#333333"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/sp_14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_2"
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:background="@color/white"
            android:layout_below="@+id/l2"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >
            <RadioButton
                android:id="@+id/check_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_16"
                android:button="@drawable/report_check_button_bg"
                android:textColor="#999999">
            </RadioButton>
            <ImageView
                android:id="@+id/ivl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wechat_pay"
                android:layout_marginLeft="@dimen/dp_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信提现"
                android:textColor="#333333"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/sp_14"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_send"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="提交"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_38"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cash_button"
            />
    </RelativeLayout>
</RelativeLayout>