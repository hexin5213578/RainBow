<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:src="@mipmap/back"
        android:id="@+id/back"
        android:layout_marginLeft="@dimen/dp_16"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="问题反馈"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_height="wrap_content">
    </TextView>
    <RelativeLayout
        android:background="@drawable/feedback_bg"
        android:layout_width="match_parent"
        android:id="@+id/rl1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_128"
        android:layout_height="@dimen/dp_234">
        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="请详细描述您在使用过程中所遇到的问题"
            android:textColor="#9A9A9A"
            android:id="@+id/et_pro"
            android:gravity="start"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="@dimen/dp_110">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:id="@+id/v1"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="#E6E6E6"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/et_pro"
            android:layout_height="@dimen/dp_1">
        </View>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginTop="@dimen/dp_26"
            android:visibility="gone"
            android:id="@+id/rc_pro_img"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="@dimen/dp_44"
            android:layout_below="@id/v1"
            android:id="@+id/rl_selectedimg"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/feedback_selectimg"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_height="@dimen/dp_44">
            <View
                android:layout_width="@dimen/dp_22"
                android:background="#E6E6E6"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp_1">
            </View>
            <View
                android:layout_width="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp_22">
            </View>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="添加图片或视频"
            android:layout_below="@id/v1"
            android:id="@+id/tv_selectedimg"
            android:textColor="#C2C2C2"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_10"
            android:layout_toRightOf="@id/rl_selectedimg"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:hint="手机号/邮箱"
        android:textColorHint="#9A9A9A"
        android:id="@+id/et_contact"
        android:layout_below="@id/rl1"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/sp_12"
        android:paddingLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/feedback_bg"
        android:layout_height="@dimen/dp_32">
    </EditText>
    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_below="@id/et_contact"
        android:background="@drawable/background_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_29"
        android:text="提交"
        android:id="@+id/bt_submit"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_height="@dimen/dp_40">
    </Button>

</RelativeLayout>