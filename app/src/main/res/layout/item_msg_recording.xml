<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:id="@+id/iv_headimg"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/headimg">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="何梦洋"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:id="@+id/tv_username"
            android:textColor="#343434"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="创造机会的人是勇者"
            android:layout_below="@id/tv_username"
            android:id="@+id/tv_last_msg"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="2020-10-07"
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/tv_time"
            android:textSize="@dimen/sp_10"
            android:layout_below="@id/tv_username"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="1"
            android:id="@+id/weiducount"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_8"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:background="@drawable/count_bg"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/tv_last_msg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:background="#F8F8F8"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_1">
        </View>
    </RelativeLayout>
</LinearLayout>