<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_gradient_noradius"
        android:layout_height="@dimen/dp_225">
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl1"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_height="@dimen/dp_40"
            >
            <LinearLayout
                android:id="@+id/l_black"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/back_white" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="签到领金币"
                android:textSize="@dimen/sp_18"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/dp_145"
            android:layout_below="@id/rl1"
            android:src="@mipmap/head4"
            android:id="@+id/iv"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_103">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/signin_bg"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_below="@id/rl1"
            android:id="@+id/rl2"
            android:layout_marginLeft="@dimen/dp_15"
            android:outlineProvider="bounds"
            android:elevation="5dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_287">
            <TextView
                android:layout_width="wrap_content"
                android:text="你已连续签到"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:id="@+id/tv2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_8867E7"
                android:layout_marginTop="@dimen/dp_9"
                android:id="@+id/tv_days"
                android:layout_toRightOf="@id/tv2"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="天"
                android:textSize="@dimen/sp_15"
                android:id="@+id/tv4"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_333333"
                android:layout_toRightOf="@id/tv_days"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/tv4"
                android:orientation="horizontal"
                android:id="@+id/l1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="@dimen/dp_83">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhouyi"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第一天"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:id="@+id/tv_zhouyi"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv1"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv1"
                        android:id="@+id/tv_zhouyi_count"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhouer"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第二天"
                        android:id="@+id/tv_zhouer"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv2"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv2"
                        android:id="@+id/tv_zhouer_count"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhousan"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第三天"
                        android:id="@+id/tv_zhousan"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv3"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv3"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:id="@+id/tv_zhousan_count"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhousi"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第四天"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:id="@+id/tv_zhousi"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv4"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:id="@+id/tv_zhousi_count"
                        android:layout_below="@id/iv4"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/l1"
                android:orientation="horizontal"
                android:id="@+id/l2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="@dimen/dp_83">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhouwu"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第五天"
                        android:id="@+id/tv_zhouwu"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv5"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv5"
                        android:id="@+id/tv_zhouwu_count"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/rl_zhouliu"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第六天"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:id="@+id/tv_zhouliu"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv6"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:id="@+id/tv_zhouliu_count"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:id="@+id/rl_zhouri"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="第七天"
                        android:id="@+id/tv_zhouri"
                        android:background="@drawable/select_qiandao_weiqiandao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:src="@mipmap/jinbi"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv7"
                        android:layout_height="@dimen/dp_22">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="金币 ×5"
                        android:layout_below="@id/iv7"
                        android:layout_marginTop="@dimen/dp_6"
                        android:id="@+id/tv_zhouri_count"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_8867E7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:background="@drawable/select_qiandao_weiqiandao_bg"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="match_parent">
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:layout_width="@dimen/dp_150"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/l2"
                android:text="点击签到"
                android:textSize="@dimen/sp_15"
                android:id="@+id/bt_qiandao"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_17"
                android:background="@drawable/background_gradient"
                android:layout_height="@dimen/dp_40">
            </Button>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl2"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_height="match_parent">
        <View
            android:layout_width="@dimen/dp_76"
            android:background="@drawable/background_gradient_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_height="@dimen/dp_5">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:text="做任务赚金币"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:id="@+id/tv3"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@id/tv3"
            android:id="@+id/rc_task"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>