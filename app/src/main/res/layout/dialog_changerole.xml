<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/tenradious_white_bg"
        android:layout_width="@dimen/dp_265"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="我的角色"
            android:textColor="#333333"
            android:id="@+id/tv"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@id/tv"
            android:id="@+id/select_role"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:layout_height="@dimen/dp_19"
                    android:text="T"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/radio_bg"
                    android:id="@+id/rb1"
                    android:gravity="center"
                    android:button="@null"
                    ></RadioButton>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:layout_height="@dimen/dp_19"
                    android:id="@+id/rb2"
                    android:background="@drawable/radio_bg"
                    android:text="P"
                    android:gravity="center"
                    android:button="@null"
                    ></RadioButton>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:background="@drawable/radio_bg"
                    android:id="@+id/rb3"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="@dimen/dp_19"
                    android:text="H"
                    android:button="@null"
                    android:gravity="center"
                    ></RadioButton>
            </RadioGroup>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:background="@drawable/radio_bg"
                    android:id="@+id/rb4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="@dimen/dp_19"
                    android:text="BI"
                    android:button="@null"
                    android:gravity="center"
                    ></RadioButton>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:background="@drawable/radio_bg"
                    android:id="@+id/rb5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="@dimen/dp_19"
                    android:text="保密"
                    android:button="@null"
                    android:gravity="center"
                    ></RadioButton>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_15"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@drawable/selector_xingbie_text_color"
                    android:background="@drawable/radio_bg"
                    android:layout_height="@dimen/dp_19"
                    android:text="保密"
                    android:button="@null"
                    android:gravity="center"
                    ></RadioButton>
            </RadioGroup>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:layout_below="@id/select_role"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/v1"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="#C577D8"
                android:text="取消"
                android:id="@+id/tv_cancle"
                android:layout_height="match_parent">
            </TextView>
            <View
                android:layout_width="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_height="match_parent">
            </View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_confirm"
                android:text="确定"
                android:textColor="#8767E7"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>