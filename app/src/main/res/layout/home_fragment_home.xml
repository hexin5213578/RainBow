<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/fafafa"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl1"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_30">
        <LinearLayout
            android:id="@+id/ll_search"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_275"
            android:background="@drawable/home_search_bg"
            android:layout_height="@dimen/dp_30">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/search"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="点击搜索"
                android:textSize="@dimen/sp_14"
                android:textColor="#9a9a9a"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:src="@mipmap/add"
            android:id="@+id/iv_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_20">
        </ImageView>
    </RelativeLayout>
    <RadioGroup
        android:layout_below="@id/rl1"
        android:id="@+id/rgTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_45"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbNewDynamic"
            style="@style/HomeTab"
            android:background="@drawable/selector_home_tab_bg"
            android:text="最新动态" />
        <RadioButton
            android:id="@+id/rbNearDynamic"
            style="@style/HomeTab"
            android:background="@drawable/selector_home_tab_bg"
            android:text="附近动态" />
        <RadioButton
            android:id="@+id/rbAttDynamic"
            style="@style/HomeTab"
            android:background="@drawable/selector_home_tab_bg"
            android:text="关注动态" />
        <RadioButton
            android:id="@+id/rbHotDynamic"
            android:background="@drawable/selector_home_tab_bg"
            style="@style/HomeTab"
            android:text="热门" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:id="@+id/v1"
        android:layout_below="@id/rgTab"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_3">
    </View>
    <FrameLayout
        android:id="@+id/flContent"
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>