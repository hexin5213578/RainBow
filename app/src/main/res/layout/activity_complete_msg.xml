<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@drawable/gradient_color"
        />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/background_gradient1"
        android:layout_height="@dimen/dp_98">
        <ImageView
            android:layout_width="@dimen/dp_21"
            android:src="@mipmap/hi"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_21">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="完善资料"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_43"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:layout_height="@dimen/dp_20">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_30"
            android:text="跳过"
            android:id="@+id/tv_jump_main"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_30">
        </TextView>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_75"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_headimg"
        android:src="@mipmap/headimg"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_height="@dimen/dp_75">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_headimg"
        android:layout_marginTop="@dimen/dp_12"
        android:text="点击上传头像"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:text="昵称"
        android:textSize="@dimen/sp_17"
        android:textColor="#343434"
        android:layout_below="@id/rl1"
        android:layout_marginTop="@dimen/dp_93"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:layout_width="@dimen/dp_200"
        android:layout_below="@id/rl1"
        android:background="@null"
        android:hint="请输入昵称"
        android:textColor="#9A9A9A"
        android:id="@+id/et_name"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_96"
        android:layout_marginLeft="@dimen/dp_103"
        android:layout_height="wrap_content">
    </EditText>
    <View
        android:id="@+id/v1"
        android:layout_below="@id/et_name"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_58"
        android:layout_height="@dimen/dp_1">
    </View>


    <TextView
        android:layout_width="wrap_content"
        android:text="年龄"
        android:textSize="@dimen/sp_17"
        android:textColor="#343434"
        android:layout_below="@id/v1"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="@dimen/dp_200"
        android:layout_below="@id/v1"
        android:background="@null"
        android:text="1998-01-01"
        android:id="@+id/tv_birth"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_103"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:id="@+id/v2"
        android:layout_below="@id/tv_birth"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_58"
        android:layout_height="@dimen/dp_1">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:text="角色"
        android:textSize="@dimen/sp_17"
        android:textColor="#343434"
        android:id="@+id/person"
        android:layout_below="@id/v2"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_below="@id/person"
        android:layout_marginTop="@dimen/dp_12"
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_58"
            android:id="@+id/rg"
            android:layout_marginRight="@dimen/dp_58"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/selector_xingbie_text_color"
                android:layout_height="@dimen/dp_19"
                android:text="T"
                android:background="@drawable/radio_bg"
                android:id="@+id/rb1"
                android:gravity="center"
                android:button="@null"
                ></RadioButton>
            <RadioButton
                android:layout_width="0dp"
                android:textColor="@drawable/selector_xingbie_text_color"

                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_height="@dimen/dp_19"
                android:id="@+id/rb2"
                android:background="@drawable/radio_bg"
                android:text="P"
                android:gravity="center"
                android:button="@null"
                ></RadioButton>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/selector_xingbie_text_color"

                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/radio_bg"
                android:id="@+id/rb3"
                android:layout_height="@dimen/dp_19"
                android:text="H"
                android:button="@null"
                android:gravity="center"
                ></RadioButton>
            <RadioButton
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/selector_xingbie_text_color"
                android:id="@+id/rb4"
                android:layout_marginLeft="@dimen/dp_8"
                android:button="@null"
                android:background="@drawable/radio_bg"
                android:layout_height="@dimen/dp_19"
                android:text="BI"
                ></RadioButton>
            <RadioButton
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/selector_xingbie_text_color"
                android:id="@+id/rb5"
                android:layout_marginLeft="@dimen/dp_8"
                android:button="@null"
                android:background="@drawable/radio_bg"
                android:layout_height="@dimen/dp_19"
                android:text="保密"
                ></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_below="@id/l1"
        android:background="@drawable/background_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:text="确认"
        android:id="@+id/bt_confirm"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_height="@dimen/dp_40">
    </Button>
</RelativeLayout>