<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_36"
        android:id="@+id/back"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back_white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content">
        </ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="忘记密码"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="遇见问题"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:visibility="gone"
        android:id="@+id/tv_mt_pro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/phone"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_210"
            android:hint="请输入您的手机号"
            android:textColor="@color/white"
            android:maxLength="11"
            android:id="@+id/et_phone"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/l2"
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:id="@+id/dun"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/shield"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_150"
            android:hint="输入验证码"
            android:id="@+id/et_code"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/dun"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
        <View
            android:layout_width="@dimen/dp_0_5"
            android:background="#C8C8C8"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_getcode"
            android:layout_height="@dimen/dp_11">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:id="@+id/tv_getcode"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l3"
        android:layout_below="@id/l2"
        android:layout_width="match_parent"
        android:background="@drawable/regist_ll_bg"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:id="@+id/suo1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/lock"
            android:layout_height="@dimen/dp_15">
        </ImageView>
        <EditText
            android:layout_width="@dimen/dp_190"
            android:hint="请输入新密码"
            android:id="@+id/et_pwd1"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/suo1"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
        </EditText>
        <RelativeLayout
            android:layout_width="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/rl1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/iv_see_pwd1"
                android:src="@mipmap/eyeclose"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_below="@id/l3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:text="确认"
        android:id="@+id/bt_confirm"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/regist_ll_bg"
        android:layout_height="@dimen/dp_40">
    </Button>
</RelativeLayout>