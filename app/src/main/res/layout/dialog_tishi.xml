<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_tishi"
        android:gravity="center"
        android:paddingTop="@dimen/sp_10"
        android:paddingBottom="@dimen/sp_10"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        >

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:text="请输入用户id"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_cha"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/cha"
            android:layout_toRightOf="@+id/tv_info"

            />

    </RelativeLayout>



</RelativeLayout>