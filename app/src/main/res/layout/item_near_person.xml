<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_45"
            android:id="@+id/iv_headimg"
            android:layout_marginTop="@dimen/dp_23"
            android:src="@mipmap/headimg"
            android:layout_height="@dimen/dp_45">
        </ImageView>
        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/tv_xingbie"
            android:text="H"
            android:textSize="@dimen/sp_10"
            android:background="@drawable/near_person_xingbie_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_53"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="偏爱"
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/iv_headimg"
            android:textColor="#343434"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="创造机会的人是勇者"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/tv_name"
            android:textColor="#666666"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="10km"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_distance"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_10"
            android:textColor="#9A9A9A"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="@dimen/dp_45"
            android:text="关注"
            android:textColor="#8E68E6"
            android:background="@drawable/near_person_bt_bg"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_distance"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_10"
            android:layout_height="@dimen/dp_18">
        </Button>
    </RelativeLayout>
</RelativeLayout>