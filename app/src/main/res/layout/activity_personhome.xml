<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_globe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/r0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_303"
                    >

                    <ImageView
                        android:id="@+id/Iv_beijing"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_303"
                        android:background="@color/color_8867E7"
                        android:scaleType="centerCrop">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_gxqianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:layout_centerInParent="true"
                        android:text="个性签名">
                        <!--                android：layout_centerHorizontal="true"-->
                    </TextView>

                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_above="@+id/tv_gxqianming"
                        android:gravity="center"

                        >
                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_9"
                            android:textColor="@color/white"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingBottom="@dimen/dp_2"
                            android:background="@drawable/background_homepage"
                            android:textSize="@dimen/sp_12"
                            android:text="H 22"
                            >

                        </TextView>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_above="@+id/ll_tag"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_15"
                        android:text="偏爱">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv_userimg"

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_above="@+id/tv_username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/sp_12"
                        >

                    </ImageView>
                    <LinearLayout
                        android:id="@+id/ll_back"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/back_white">

                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_candian"
                        android:layout_width="@dimen/dp_50"
                        android:visibility="gone"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@mipmap/sandianwhite">

                        </ImageView>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_fenguanli"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80">

                    <LinearLayout
                        android:id="@+id/ll_fensi"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_8"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fensi_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:text="1"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_fensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"
                            android:text="粉丝">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_guanzhu"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_guanzhu_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#333333"

                            android:text="1"
                            >
                            </TextView>

                        <TextView
                            android:id="@+id/tv_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"


                            android:text="关注">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_liwu"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="@dimen/dp_8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_liwu_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#333333"
                            android:text="1">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_liwu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"
                            android:text="礼物">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:background="#F7F7F7">

                </View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_dynamic"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:layout_marginBottom="@dimen/dp_48"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_nodata"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp_48"
                    android:layout_height="@dimen/dp_300">
                    <ImageView
                        android:layout_width="@dimen/dp_153"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_66"
                        android:id="@+id/iv"
                        android:src="@mipmap/nodynamic"
                        android:layout_height="@dimen/dp_136">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="该用户暂未发布过动态"
                        android:layout_below="@id/iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_29"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_send"
        android:background="@drawable/bottom_bg"
        android:layout_height="@dimen/dp_48">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:text="送礼物"
                android:layout_weight="1"
                android:textColor="#C376D9"
                android:id="@+id/bt_send"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/person_home_bt_bg1"
                android:layout_height="match_parent">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_49"
                android:layout_weight="1"
                android:text="关注"
                android:id="@+id/bt_guanzhu"
                android:textSize="@dimen/sp_15"
                android:textColor="#8867E7"
                android:background="@drawable/person_home_bt_bg2"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>