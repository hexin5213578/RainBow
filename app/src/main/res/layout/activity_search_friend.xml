<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".friend.activity.SearchFriendActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_17"
                android:src="@mipmap/back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="找人找群"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/rl_top"
        android:id="@+id/ll_shuru"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="@dimen/dp_295"
        android:background="@drawable/home_search_bg"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/search"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_12"
            android:background="@null"
            android:hint="输入昵称或者群名搜索"
            android:id="@+id/et_text"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/rl_top"
        android:id="@+id/ll_search"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:text="搜索"
            android:layout_gravity="center"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_middle"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_search">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户查询"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/ll_seemore1"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_7"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:src="@mipmap/back_to"></ImageView>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_searchfriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_below="@id/rc_searchfriend"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群组查询"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_seemore2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_7"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:src="@mipmap/back_to"></ImageView>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_searchgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/rl_nodata"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_187"
                android:src="@mipmap/noperson"
                android:id="@+id/tv"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp_169">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:text="没有找到该用户或群组"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>