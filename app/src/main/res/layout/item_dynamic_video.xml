<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:id="@+id/rl_item"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_40"
        android:id="@+id/rl_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/dp_40">
        </ImageView>
        <TextView
            android:layout_width="@dimen/dp_15"
            android:text="BI"
            android:id="@+id/tv_age"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/newdynamic_age"
            android:layout_height="@dimen/dp_15">
        </TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:text="昵称"
        android:id="@+id/tv_username"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@id/rl_head"
        android:layout_height="@dimen/dp_14">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="半小时前发布"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/rl_head"
        android:textSize="@dimen/sp_8"
        android:textColor="#9A9A9A"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_8"
        android:id="@+id/isattaction"
        android:layout_toRightOf="@id/tv_username"
        android:layout_height="@dimen/dp_15">
    </ImageView>
    <TextView
        android:layout_width="@dimen/dp_45"
        android:text="关注"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_guanzhu"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:layout_height="@dimen/dp_18">
    </TextView>
    <com.YiDian.RainBow.custom.videoplayer.SampleCoverVideo
        android:layout_width="match_parent"
        android:id="@+id/video_player"
        android:layout_below="@id/rl_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_height="@dimen/dp_165">
    </com.YiDian.RainBow.custom.videoplayer.SampleCoverVideo>

    <LinearLayout
        android:id="@+id/ll_huati"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_19"
        android:layout_below="@id/video_player"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/newdynamic_ll_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="#交友聊天"
            android:textColor="#21B6FD"
            android:textSize="@dimen/sp_12"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HOT!"
            android:textColor="#3C025A"
            android:textSize="@dimen/sp_12"
            android:textStyle="italic"></TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/video_player"
        android:layout_toRightOf="@id/ll_huati"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_dianzan"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/weidianzan"
                android:id="@+id/iv_dianzan"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_toRightOf="@id/iv_dianzan"
                android:layout_width="wrap_content"
                android:text="30"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="@dimen/sp_9"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_dianzan_count"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_pinglun"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/pinglun"
                android:id="@+id/iv_pinglun"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="30"
                android:textSize="@dimen/sp_9"
                android:id="@+id/tv_pinglun_count"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_pinglun"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_dynamic_text"
            android:id="@+id/rl_zhuanfa"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_17">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:src="@mipmap/zhuanfa"
                android:id="@+id/iv_zhuanfa"
                android:layout_height="@dimen/dp_17">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:text="转发"
                android:id="@+id/zhuangfa"
                android:textSize="@dimen/sp_9"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_zhuanfa"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="6.0km"
        android:textSize="@dimen/sp_11"
        android:id="@+id/tv_distance"
        android:layout_below="@id/ll_huati"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#9A9A9A"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@id/tv_distance"
        android:layout_height="@dimen/dp_3">
    </View>
</RelativeLayout>