<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="@dimen/dp_280"
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_allcard"
        android:background="@drawable/find_match_car_bg"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_height="@dimen/dp_400">

        <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_314"
            android:scaleType="centerCrop"
            roundiv:left_top_radius="@dimen/dp_10"
            roundiv:right_top_radius="@dimen/dp_10"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_card_bottom"
            android:layout_below="@id/iv_img"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="偏爱"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                android:id="@+id/tv_username"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="12.6km"
                android:textSize="@dimen/sp_10"
                android:id="@+id/tv_distance"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="@dimen/dp_15"
                android:text="T"
                android:gravity="center"
                android:textSize="@dimen/sp_10"
                android:id="@+id/tv_xingbie"
                android:textColor="@color/white"
                android:layout_below="@id/tv_username"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/match_card_xingbie"
                android:layout_height="@dimen/dp_15">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:id="@+id/rc_hobby"
                android:layout_below="@id/tv_username"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@id/tv_xingbie"
                android:layout_marginTop="@dimen/dp_10"
                >
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_xingbie"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_10"
                android:textColor="#666666"
                android:id="@+id/tv_qianming"
                android:layout_marginTop="@dimen/dp_10"
                android:text="创造机会的人是勇者，等待机会的人是愚者"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>