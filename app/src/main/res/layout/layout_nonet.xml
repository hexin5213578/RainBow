<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_nonet"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_212"
            android:src="@mipmap/nonet"
            android:id="@+id/iv1"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_158">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="网络出了点小问题，请刷新重试"
            android:layout_below="@id/iv1"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="@dimen/dp_100"
            android:id="@+id/bt_reload"
            android:layout_centerHorizontal="true"
            android:text="重新加载"
            android:background="@drawable/reload_bg"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_below="@id/iv1"
            android:layout_marginTop="@dimen/dp_81"
            android:layout_height="@dimen/dp_32">
        </Button>
    </RelativeLayout>
</RelativeLayout>