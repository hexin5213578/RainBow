<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_item"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/rl_play"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="@dimen/dp_33">
            <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
                android:layout_width="match_parent"
                android:src="@mipmap/headimg"
                roundiv:radius="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:id="@+id/iv_headimg"
                android:layout_height="match_parent">
            </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:src="@mipmap/play"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp_14">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/rl_play"
            android:background="#f5f5f5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_1">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:text="我们都一样"
            android:layout_toRightOf="@id/rl_play"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_musicname"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_musicname"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/rl_play"
            android:textSize="@dimen/sp_10"
            android:text="这里是作者"
            android:id="@+id/tv_author"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
</RelativeLayout>