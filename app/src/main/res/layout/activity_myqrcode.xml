<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/all_bg"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_height="@dimen/dp_22">
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:id="@+id/iv_back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:src="@mipmap/back"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="match_parent">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="我的二维码"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_190"
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_qrcode"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_height="@dimen/dp_282">
        <RelativeLayout
            android:layout_width="@dimen/dp_190"
            android:background="@drawable/qrcode_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_height="@dimen/dp_252">
            <ImageView
                android:layout_width="@dimen/dp_104"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_Qrcode"
                android:src="@mipmap/qrcode"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_height="@dimen/dp_104">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="偏爱"
                android:layout_below="@id/iv_Qrcode"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="ID:23456789"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_id"
                android:textColor="@color/color_666666"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="扫一扫加关注"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_10"
                android:layout_below="@id/tv_id"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:layout_height="@dimen/dp_60">
        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_118"
        android:layout_alignParentBottom="true"
        android:background="@drawable/qrcode_button_bg"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_48"
        android:id="@+id/ll_save"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/download"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="保存"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_118"
        android:layout_alignParentBottom="true"
        android:background="@drawable/qrcode_button_bg"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_48"
        android:id="@+id/ll_share"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/share_white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="分享"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</RelativeLayout>
