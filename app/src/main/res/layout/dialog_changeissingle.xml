<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/tenradious_white_bg"
        android:layout_width="@dimen/dp_265"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="感情状态"
            android:textColor="#333333"
            android:id="@+id/tv"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/tv"
            android:id="@+id/ll"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rl_danshen"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="单身"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content">
                </TextView>
                <RadioButton
                    android:id="@+id/check_danshen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/report_check_button_bg"
                    android:textColor="#999999">
                </RadioButton>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rl_lianai"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="恋爱中"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content">
                </TextView>
                <RadioButton
                    android:id="@+id/check_lianai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/report_check_button_bg"
                    android:textColor="#999999">
                </RadioButton>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rl_baomi"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="保密"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content">
                </TextView>
                <RadioButton
                    android:id="@+id/check_baomi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/report_check_button_bg"
                    android:textColor="#999999">
                </RadioButton>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:layout_below="@id/ll"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/v1"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="#C577D8"
                android:text="取消"
                android:id="@+id/tv_cancle"
                android:layout_height="match_parent">
            </TextView>
            <View
                android:layout_width="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_height="match_parent">
            </View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_confirm"
                android:text="确定"
                android:textColor="#8767E7"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>