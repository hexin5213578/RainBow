<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/sendgift_bg"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp_304">
        <TextView
            android:layout_width="wrap_content"
            android:text="礼物"
            android:textColor="@color/color_8867E7"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_width="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_close"
            android:layout_height="@dimen/dp_45">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/cancle_gift"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_15">
            </ImageView>
        </RelativeLayout>
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_below="@id/tv"
            android:layout_marginTop="@dimen/dp_9"
            android:id="@+id/vp"
            android:layout_height="@dimen/dp_217">
        </androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:id="@+id/ll_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@id/vp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/ll_dot"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/balance"
                android:id="@+id/iv"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="123456"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:id="@+id/tv_balance"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/tv_balance"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:id="@+id/ll_recharge"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="立即充值"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_8867E7"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/right_gift"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_height="@dimen/dp_8">
                </ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/rl_send"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/gift_bt_bg"
                    android:id="@+id/tv_send"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="赠送"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/dp_17">
                </TextView>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>