<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_f7f7f7"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="2020年10月08号 21:36"
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@id/tv_time"
            android:layout_height="@dimen/dp_30">
        </ImageView>
        <RelativeLayout
            android:layout_width="@dimen/dp_150"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/rl_location"
            android:elevation="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/location_five_radious_bg"
            android:layout_toLeftOf="@id/iv_headimg"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_100">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:maxLines="2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_2"
                android:id="@+id/tv_address"
                android:text="河南省商丘市柘城县长江新城街道淮海路与学苑路交叉口"
                android:layout_height="wrap_content">
            </TextView>
            <com.amap.api.maps.MapView
                android:layout_width="match_parent"
                android:layout_below="@id/tv_address"
                android:id="@+id/mapView"
                android:layout_height="match_parent">
            </com.amap.api.maps.MapView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>