<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:id="@+id/rl_top"
        android:layout_height="@dimen/dp_215">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/back_white">
            </ImageView>
        </LinearLayout>
        <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
            android:layout_below="@id/ll_back"
            android:layout_width="@dimen/dp_69"
            android:src="@mipmap/headimg"
            android:scaleType="centerCrop"
            roundiv:radius="@dimen/dp_5"
            android:id="@+id/iv_img"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_61">
        </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="群聊名字"
            android:textColor="@color/white"
            android:layout_below="@id/iv_img"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_group_name"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_group_name"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:text="ID:123456"
                android:id="@+id/tv_group_id"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:layout_height="match_parent">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_11"
                    android:src="@mipmap/group_count"
                    android:layout_gravity="bottom"
                    android:layout_height="@dimen/dp_12">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="100"
                    android:id="@+id/tv_group_people_count"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_height="match_parent">

    </RelativeLayout>
</RelativeLayout>