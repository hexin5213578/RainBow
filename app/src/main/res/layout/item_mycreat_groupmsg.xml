<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_12"
        android:id="@+id/rl_item"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_width="@dimen/dp_45"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:layout_height="@dimen/dp_45">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="偏爱"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_num"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/num_bg"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_6"
                android:src="@mipmap/people_count"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_8">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="69"
                android:id="@+id/tv_num"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="创造机会的人是勇者"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/ll_num"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_autograph"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/tv_autograph"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/iv_headimg"
            android:background="@color/color_f7f7f7"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_1">
        </View>
    </RelativeLayout>
</RelativeLayout>