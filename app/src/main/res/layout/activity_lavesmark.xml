<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#FFFFFF"/>
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        >
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/l_return"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_46">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/back_white" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="情侣标识"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_18"
            android:textColor="#333333"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:visibility="gone"
        android:layout_below="@+id/r1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人ID：123456"
            android:textSize="@dimen/sp_12"
            android:textColor="#8866E7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_8"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_27"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lovemark_exit"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"

            >
            <EditText
                android:id="@+id/ed_inputid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_13"
                android:hint="请输入ID/昵称"
                android:background="@null"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_toRightOf="@+id/ed_inputid"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_22"
                android:gravity="center"
                android:textSize="@dimen/sp_11"
                android:textColor="#FCFCFC"
                android:background="@drawable/lovemark_exit2"
                android:text="绑定"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_4"
                />

        </RelativeLayout>
        <View
            android:id="@+id/v11"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FF0000"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_below="@+id/r1"
        
        >
        <ImageView
            android:id="@+id/iv_headimg1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:background="#555555"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偏爱"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_below="@+id/iv_headimg1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sp_7"
            />
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消请求"
            android:textSize="@dimen/sp_11"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:layout_below="@+id/tv_nicheng"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lovemark_exit"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nicheng"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="@dimen/sp_11"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:background="@drawable/lovemark_ext3"
                android:layout_marginRight="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textSize="@dimen/sp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"

                android:layout_centerHorizontal="true"
                android:background="@drawable/lovemark_exit"
                android:layout_toRightOf="@+id/tv_true"

                />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/r2"
        android:layout_below="@+id/r12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_182">
        <ImageView
            android:id="@+id/im1"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lovemark1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你已绑定情侣"
            android:textColor="#8866E7"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/im1"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/f2f2f2"
        android:layout_below="@+id/r2"
        />
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_69"
        android:layout_below="@+id/v2"
        android:background="@mipmap/lovemark1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            >
            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:background="@color/color_8867E7"
                >
                <ImageView
                    android:id="@+id/iv_headimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_role"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="H"
                    android:textSize="@dimen/sp_11"
                    android:background="@drawable/newdynamic_age"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="创造机会的人是勇者"
                android:layout_toRightOf="@+id/r3"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="#333333"
                android:text="偏爱"
                android:layout_toRightOf="@+id/r3"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:text="解除绑定"
                android:textColor="#8E68E6"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#ff2222"
                />

            
        </RelativeLayout>
        



    </RelativeLayout>




</RelativeLayout>