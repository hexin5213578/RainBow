<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white" android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white" />
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_42">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/back"></ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="我的访客"
            android:id="@+id/tv_name"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_nodata"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_221"
            android:id="@+id/iv"
            android:src="@mipmap/nofangke"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_155">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="还没有访客记录哦~"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_below="@id/iv"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:id="@+id/sv"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/l1"
                    android:layout_height="@dimen/dp_51">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="15"
                            android:id="@+id/tv_all_count"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_666666"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="总浏览数"
                            android:layout_below="@id/tv_all_count"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="+15"
                            android:id="@+id/tv_today_count"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_666666"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="今日浏览数"
                            android:layout_below="@id/tv_today_count"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/v1"
                    android:background="@color/color_f7f7f7"
                    android:layout_height="@dimen/dp_3">
                </View>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rc_record"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:overScrollMode="never"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>