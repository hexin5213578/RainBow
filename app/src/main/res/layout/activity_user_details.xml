<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:id="@+id/sv"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_303">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/iv_bg"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/dp_303">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center"
                        android:id="@+id/back"
                        android:layout_height="@dimen/dp_50">
                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:src="@mipmap/back_white"
                            android:scaleType="centerCrop"
                            android:layout_height="@dimen/dp_15">
                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:id="@+id/sandian"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_50">
                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:src="@mipmap/sandianwhite"
                            android:layout_height="@dimen/dp_15">
                        </ImageView>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rl1"
                    android:layout_height="@dimen/dp_86">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="偏爱"
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/tv_username"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="H 22"
                        android:background="@drawable/user_details_hobby_bg"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:id="@+id/tv_age"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_below="@id/tv_username"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="4km"
                        android:textColor="#666666"
                        android:id="@+id/tv_distance"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textSize="@dimen/sp_10"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:background="#F7F7F7"
                    android:layout_height="@dimen/dp_3">
                </View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_nodata"
                    android:visibility="gone"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_153"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_66"
                        android:id="@+id/iv"
                        android:src="@mipmap/nodynamic"
                        android:layout_height="@dimen/dp_136">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="该用户暂未发布过动态"
                        android:layout_below="@id/iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_29"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rc_dynamic"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>