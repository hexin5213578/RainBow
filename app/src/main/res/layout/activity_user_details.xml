<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_303">
        <com.stx.xhb.xbanner.XBanner
            android:layout_width="match_parent"
            app:pointsPosition="CENTER"
            android:id="@+id/xbn"
            android:background="@color/black"
            android:layout_height="@dimen/dp_303">
        </com.stx.xhb.xbanner.XBanner>
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:id="@+id/back"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/back"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_15">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:id="@+id/sandian"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/sandian"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_15">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="ID"
            android:textStyle="italic"
            android:id="@+id/id"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_12"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_15"
            android:text=":116-666-333"
            android:textColor="@color/white"
            android:id="@+id/tv_userId"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/id"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_below="@id/rl1"
        android:layout_height="@dimen/dp_86">
        <TextView
            android:layout_width="wrap_content"
            android:text="偏爱"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_username"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_54"
            android:text="关注"
            android:textColor="@color/white"
            android:background="@drawable/user_details_bt_bg"
            android:paddingLeft="@dimen/dp_12"
            android:id="@+id/tv_guanzhu"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:layout_height="@dimen/dp_18">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_40"
            android:text="H 22"
            android:background="@drawable/user_details_hobby_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:id="@+id/tv_age"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/tv_username"
            android:layout_height="@dimen/dp_18">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_username"
            android:id="@+id/rc_hobby"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_age"
            android:layout_height="@dimen/dp_18">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:text="4km"
            android:textColor="#666666"
            android:id="@+id/tv_distance"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="@dimen/sp_10"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:layout_below="@id/rl2"
        android:layout_height="@dimen/dp_3">
    </View>
    <RadioGroup
        android:id="@+id/rgMenu"
        android:layout_below="@id/v1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbFabiao"
            style="@style/UserDetailsTab"
            android:textSize="@dimen/sp_10"
            android:background="@drawable/user_details_tab_left_bg"
            android:text="发表的动态" />
        <RadioButton
            android:id="@+id/rbDianzan"
            android:textSize="@dimen/sp_10"
            style="@style/UserDetailsTab"
            android:background="@drawable/user_details_tab_right_bg"
            android:text="点赞的动态" />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/flContent"
        android:layout_below="@id/rgMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>