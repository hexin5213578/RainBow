<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/iv_headimg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="centerCrop"
            android:src="@mipmap/headimg"></ImageView>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/newdynamic_age"
            android:gravity="center"
            android:text="BI"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"></TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@id/rl_head"
        android:text="昵称"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"></TextView>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/rl_head"
        android:text="半小时前发布"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/sp_8"></TextView>

    <ImageView
        android:id="@+id/isattaction"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@id/tv_username"
        ></ImageView>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/background_gradient_nine_radious"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"></TextView>

    <TextView
        android:id="@+id/tv_dynamic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:text="我们确实活得艰难，一要承受种种外部的压力， 更要面 对自己内心的困惑。在苦苦挣扎中，如果有人向你投以 理解的目光，你会感到- -种生命的暖意，或许仅有短暂 的-瞥,就足以使我感奋不已。"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"></TextView>

    <LinearLayout
        android:id="@+id/ll_huati"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_19"
        android:layout_below="@id/tv_dynamic_text"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/newdynamic_ll_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="#交友聊天"
            android:textColor="#21B6FD"
            android:textSize="@dimen/sp_12"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HOT!"
            android:textColor="#3C025A"
            android:textSize="@dimen/sp_12"
            android:textStyle="italic"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dynamic_text"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toRightOf="@id/ll_huati"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_dianzan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_17"
            android:layout_below="@id/tv_dynamic_text"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_dianzan"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/weidianzan"></ImageView>

            <TextView
                android:id="@+id/tv_dianzan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/iv_dianzan"
                android:text="30"
                android:textSize="@dimen/sp_9"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pinglun"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_17"
            android:layout_below="@id/tv_dynamic_text"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_pinglun"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/pinglun"></ImageView>

            <TextView
                android:id="@+id/tv_pinglun_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/iv_pinglun"
                android:text="30"
                android:textSize="@dimen/sp_9"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zhuanfa"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_17"
            android:layout_below="@id/tv_dynamic_text"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_zhuanfa"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/zhuanfa"></ImageView>

            <TextView
                android:id="@+id/zhuangfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/iv_zhuanfa"
                android:text="转发"
                android:textSize="@dimen/sp_9"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_huati"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:text="6.0km"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/sp_11"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/tv_distance"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#F8F8F8"></View>
</RelativeLayout>