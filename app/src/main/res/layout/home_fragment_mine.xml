<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@drawable/gradient_color"
        />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:background="@mipmap/mine_top"
        android:layout_height="@dimen/dp_175">
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:src="@mipmap/headimg"
            android:id="@+id/iv_headimg"
            android:layout_marginTop="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_60">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_headimg"
            android:layout_below="@id/tv_username"
            android:text="特权等级"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:gravity="center"
            android:background="@drawable/mine_tv_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="偏爱"
            android:layout_toRightOf="@id/iv_headimg"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/white"
            android:id="@+id/tv_username"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_49"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="@dimen/dp_39"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_fangke"
            android:layout_marginTop="@dimen/dp_49"
            android:background="@drawable/mine_dianzan_bg"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_22">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:src="@mipmap/eye"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="@dimen/dp_7">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="300"
                android:id="@+id/tv_fangke_count"
                android:textSize="@dimen/sp_7"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_4"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_26"
            android:src="@mipmap/qrcode"
            android:layout_below="@id/ll_fangke"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_QrCode"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_26">
        </ImageView>
        <LinearLayout
            android:id="@+id/l1"
            android:layout_below="@id/iv_headimg"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_haoyou"
                android:layout_height="@dimen/dp_35">

                <TextView
                    android:id="@+id/tv_count_haoyou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="好友"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_fensi"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_toRightOf="@id/ll_haoyou"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:text="20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/tv_count_fensi"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_guanzhu"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_toRightOf="@id/ll_fensi"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:text="20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/tv_count_guanzhu"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_qunzu"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_toRightOf="@id/ll_guanzhu"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:text="20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/tv_count_qunzu"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="群组"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/mine_down_all_bg"
        android:layout_marginTop="@dimen/dp_166"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_tequan"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_height="@dimen/dp_26">
            <ImageView
                android:layout_width="@dimen/dp_57"
                android:src="@mipmap/tequan"
                android:id="@+id/iv_tequan"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_26">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:text="特权认证,享多重特权"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@id/iv_tequan"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/ll_readdetails"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_26">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="查看详情"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_8867E7"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_gravity="center"
                    android:src="@mipmap/back_to_details"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="实用功能"
            android:id="@+id/tv_shiyong"
            android:layout_below="@id/ll_tequan"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:background="#EAEAEA"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@id/tv_shiyong"
            android:id="@+id/v1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_1">
        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l4"
            android:layout_below="@id/v1"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_dongtai"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_38"
                    android:src="@mipmap/fabu"
                    android:layout_height="@dimen/dp_38">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="发布的动态"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_caogaoxiang"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/ll_dongtai"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_38"
                    android:src="@mipmap/caogao"
                    android:layout_height="@dimen/dp_38">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="草稿箱"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_shoucang"
                android:layout_toRightOf="@id/ll_caogaoxiang"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_38"
                    android:src="@mipmap/shoucang"
                    android:layout_height="@dimen/dp_38">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="收藏"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_qiandao"
                android:layout_toRightOf="@id/ll_shoucang"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_38"
                    android:src="@mipmap/qiandao"
                    android:layout_height="@dimen/dp_38">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="签到"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="常用功能"
            android:id="@+id/tv_changyong"
            android:layout_below="@id/l4"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:background="#EAEAEA"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@id/tv_changyong"
            android:id="@+id/v2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_1">
        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l2"
            android:layout_below="@id/v2"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_goldblance"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/yue"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="金币余额"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_shiming"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/shiming"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="实名认证"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_liwu"
                android:layout_toRightOf="@id/ll_caogaoxiang"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/liwu"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="礼物记录"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_chongzhi"
                android:layout_toRightOf="@id/ll_shoucang"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/zhangdan"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="充值"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l3"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_below="@id/l2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ll_yaoqing"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/qinglv"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="情侣标识"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_toRightOf="@id/ll_qiandao"
                android:layout_below="@id/ll_dongtai"
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/ll_renzheng"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/reznheng"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="特权认证"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_blacklist"
                android:layout_toRightOf="@id/ll_liwu"
                android:layout_below="@id/ll_dongtai"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/heimingdan"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="黑名单"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/ll_shezhi"
                android:layout_below="@id/ll_dongtai"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:src="@mipmap/shezhi"
                    android:layout_height="@dimen/dp_40">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="设置"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>