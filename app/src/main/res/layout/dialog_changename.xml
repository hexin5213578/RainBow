<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/tenradious_white_bg"
        android:layout_width="@dimen/dp_265"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="修改昵称"
            android:textColor="#333333"
            android:id="@+id/tv"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@id/tv"
            android:id="@+id/llet"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/dp_185"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:background="#F7F7F7"
                    android:hint="请输入昵称"
                    android:paddingLeft="@dimen/dp_10"
                    android:id="@+id/et_name"
                    android:textColor="#666666"
                    android:maxLength="10"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="@dimen/dp_30">
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0/10"
                    android:textSize="@dimen/sp_10"
                    android:id="@+id/tv_Rem"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <TextView
                android:layout_width="@dimen/dp_43"
                android:layout_below="@id/tv"
                android:text="检测"
                android:id="@+id/tv_jiance"
                android:background="@drawable/name_jiance_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_13"
                android:gravity="center"
                android:layout_height="@dimen/dp_24">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:layout_below="@id/llet"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/v1"
            android:layout_height="@dimen/dp_1">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="#C577D8"
                android:text="取消"
                android:id="@+id/tv_cancle"
                android:layout_height="match_parent">
            </TextView>
            <View
                android:layout_width="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_height="match_parent">
            </View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_confirm"
                android:text="确定"
                android:textColor="#8767E7"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>