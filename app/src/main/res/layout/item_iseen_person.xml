<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_item"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_45"
            android:id="@+id/rl_img"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="@dimen/dp_45">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_headimg"
                android:src="@mipmap/headimg"
                android:layout_height="match_parent">
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_15"
                android:id="@+id/tv_xingbie"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="H"
                android:textSize="@dimen/sp_10"
                android:background="@drawable/near_person_xingbie_bg"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="@dimen/dp_15">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/rl_img"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_70"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"
            android:id="@+id/tv_autograph"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/tv_name"
            android:textColor="#666666"
            android:layout_toRightOf="@id/rl_img"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="2020-10-07"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_999999"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="@dimen/dp_50"
            android:text="关注"
            android:textColor="#8E68E6"
            android:id="@+id/bt_guanzhu"
            android:background="@drawable/near_person_bt_bg"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/sp_10"
            android:layout_height="@dimen/dp_18">
        </Button>
        <View
            android:layout_width="match_parent"
            android:id="@+id/v1"
            android:layout_below="@id/bt_guanzhu"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/rl_img"
            android:background="#F7F7F7"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_1">
        </View>
    </RelativeLayout>
</RelativeLayout>