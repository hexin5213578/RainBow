<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="#8867E7"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/background_gradient_top_bottom"
                android:layout_width="match_parent"
                android:id="@+id/rl_title"
                android:layout_height="@dimen/dp_195">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/rl_top"
                    android:layout_height="@dimen/dp_40">
                    <LinearLayout
                        android:layout_width="@dimen/dp_50"
                        android:gravity="bottom"
                        android:id="@+id/ll_back"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:src="@mipmap/back"
                            android:layout_height="@dimen/dp_25">
                        </ImageView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="我的公会"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_333333"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">
                    </TextView>
                    <RelativeLayout
                        android:layout_width="@dimen/dp_50"
                        android:id="@+id/ll_shusandian"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/shusandian"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            android:layout_height="@dimen/dp_25">
                        </ImageView>
                    </RelativeLayout>
                </RelativeLayout>
                <com.YiDian.RainBow.custom.image.CustomRoundAngleImageView
                    android:layout_width="@dimen/dp_69"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/iv_img"
                    android:layout_marginTop="@dimen/dp_9"
                    roundiv:radius="@dimen/dp_5"
                    android:layout_below="@id/rl_top"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/headimg"
                    android:layout_height="@dimen/dp_61">
                </com.YiDian.RainBow.custom.image.CustomRoundAngleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="公会名字"
                    android:layout_below="@id/iv_img"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/tv_union_name"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_middle"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_below="@id/tv_union_name"
                    android:layout_height="@dimen/dp_18">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ID:"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="123456"
                        android:id="@+id/tv_union_id"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">
                    </TextView>

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_28"
                        android:src="@drawable/ic_launcher"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/dp_18"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100"
                        android:id="@+id/tv_union_count"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="公会宣言"
                    android:layout_below="@id/ll_middle"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_title"
                android:layout_marginTop="3dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_raking"
                        android:layout_width="@dimen/dp_33"
                        android:layout_height="@dimen/dp_33"
                        roundiv:placeholderImage="@mipmap/headimg"
                        roundiv:roundAsCircle="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="排行榜"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_toRightOf="@id/l1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_person"
                        android:layout_width="@dimen/dp_33"
                        android:layout_height="@dimen/dp_33"
                        roundiv:placeholderImage="@mipmap/headimg"
                        roundiv:roundAsCircle="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="成员"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_toRightOf="@id/l2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_manager"
                        android:layout_width="@dimen/dp_33"
                        android:layout_height="@dimen/dp_33"
                        roundiv:placeholderImage="@mipmap/headimg"
                        roundiv:roundAsCircle="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="管理"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="公会公告"
                    android:layout_below="@id/l1"
                    android:id="@+id/tv1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_9"
                    android:text="点击编辑公告"
                    android:layout_below="@id/tv1"
                    android:id="@+id/tv_notice"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/mine_signature_bg"
                    android:textColor="#9A9A9A"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="@dimen/dp_38">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="主打房间"
                    android:layout_below="@id/tv_notice"
                    android:id="@+id/tv2"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_below="@id/tv2"
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/rc_chatroom"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="公会名片"
                    android:layout_below="@id/rc_chatroom"
                    android:id="@+id/tv3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_9"
                    android:text="点击编辑名片"
                    android:layout_below="@id/tv3"
                    android:id="@+id/tv_card"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/mine_signature_bg"
                    android:textColor="#9A9A9A"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="@dimen/dp_38">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>