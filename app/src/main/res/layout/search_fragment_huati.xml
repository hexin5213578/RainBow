<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <RelativeLayout
              android:layout_width="match_parent"
              android:id="@+id/rl1"
              android:layout_marginTop="@dimen/dp_20"
              android:layout_height="@dimen/dp_30">
              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_width="match_parent"
                  android:layout_toLeftOf="@id/tv_search"
                  android:layout_marginRight="@dimen/dp_15"
                  android:background="@drawable/home_search_bg"
                  android:layout_height="@dimen/dp_30">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:src="@mipmap/search"
                      android:layout_marginLeft="@dimen/dp_21"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content">
                  </ImageView>
                  <EditText
                      android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:hint="输入关键词搜索你感兴趣的话题"
                      android:background="@null"
                      android:id="@+id/et_search"
                      android:textColorHint="#999999"
                      android:textSize="@dimen/sp_12"
                      android:textColor="#9a9a9a"
                      android:layout_marginLeft="@dimen/dp_17"
                      android:layout_height="wrap_content">
                  </EditText>
              </LinearLayout>
              <TextView
                  android:layout_width="wrap_content"
                  android:text="搜索"
                  android:layout_centerVertical="true"
                  android:textColor="#8C68E6"
                  android:id="@+id/tv_search"
                  android:textSize="@dimen/sp_12"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_height="wrap_content">
              </TextView>
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_below="@id/rl1"
              android:id="@+id/rl2"
              android:layout_height="@dimen/dp_85">
              <TextView
                  android:layout_width="wrap_content"
                  android:text="搜索历史"
                  android:textSize="@dimen/sp_12"
                  android:textColor="#333333"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_height="wrap_content">
              </TextView>
              <ImageView
                  android:layout_width="@dimen/dp_12"
                  android:layout_marginTop="@dimen/dp_13"
                  android:id="@+id/iv_delete_history"
                  android:layout_marginRight="@dimen/dp_15"
                  android:src="@mipmap/delete"
                  android:layout_alignParentRight="true"
                  android:layout_height="@dimen/dp_12">
              </ImageView>
              <com.YiDian.RainBow.custom.flawlayout.FlowLayout
                  android:layout_width="match_parent"
                  android:id="@+id/search_history"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_marginTop="@dimen/dp_12"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_below="@id/iv_delete_history"
                  android:layout_height="match_parent">
              </com.YiDian.RainBow.custom.flawlayout.FlowLayout>
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:background="#F7F7F7"
              android:id="@+id/v1"
              android:layout_below="@id/rl2"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="@dimen/dp_3">
          </View>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_below="@id/v1"
              android:id="@+id/rl3"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:text="热门搜索"
                  android:textColor="#333333"
                  android:id="@+id/hotsearch"
                  android:layout_marginTop="@dimen/dp_15"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:textSize="@dimen/sp_15"
                  android:layout_height="wrap_content">
              </TextView>
              <androidx.recyclerview.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:layout_below="@id/hotsearch"
                  android:id="@+id/rc_hotsearch_first"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_height="wrap_content">
              </androidx.recyclerview.widget.RecyclerView>
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:background="#F7F7F7"
              android:id="@+id/v2"
              android:layout_below="@id/rl3"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="@dimen/dp_3">
          </View>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/dp_15"
                  android:id="@+id/rl4"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:text="热门话题"
                      android:textColor="#333333"
                      android:textSize="@dimen/sp_15"
                      android:layout_height="wrap_content">
                  </TextView>
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:src="@mipmap/back_to"
                      android:layout_gravity="center"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:id="@+id/iv_tohotHuati"
                      android:layout_height="@dimen/dp_10">
                  </ImageView>
              </RelativeLayout>
              <androidx.recyclerview.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:layout_below="@id/rl4"
                  android:id="@+id/rc_hotHuati"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_height="wrap_content">
              </androidx.recyclerview.widget.RecyclerView>
          </RelativeLayout>
      </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</RelativeLayout>