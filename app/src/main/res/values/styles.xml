<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首页tab-->
    <style name="MainTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
    </style>
    <!--首页中 首页tab-->
    <style name="HomeTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@drawable/selector_home_tab_text_color</item>
    </style>
    <!--聊天tab-->
    <style name="IMTab">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@drawable/selector_home_tab_text_color</item>
    </style>
    <!--发现tab-->
    <style name="FindTab">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@drawable/selector_find_tab_text_color</item>
    </style>

    <!--搜索 Tab-->
    <style name="SearchTab">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@drawable/search_tab_text_color</item>
    </style>

    <!--用户详情 Tab-->
    <style name="UserDetailsTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@drawable/user_details_textcolor</item>
    </style>



    <!--tab选中字体加粗-->
    <style name="txt_bold" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item>
    </style>
    <!--未选中默认-->
    <style name="txt_nomal" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">normal</item>
    </style>
</resources>